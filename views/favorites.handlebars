  
     
        <h1 id="favoriteTitle">Your favorite burger list</h1>
        <div class="flex flex-wrap">
      {{#each favorites}}
    <container id="resultsContainer" class="card w-80 ml-3 mt-3 bg-warning shadow-xl">
        <figure><img src="{{image}}" alt="burger" class="mt-2 rounded"/></figure>
        <div class="card-body">
          <h2 class="card-title text-secondary ">{{name}}</h2>
          <p class="text-secondary">{{description}}</p>
          <a href="{{recipe}}" target="_blank"><p class="text-secondary">View online recipe.</p></a>
          <div class="card-actions justify-end">
            <button class="btn btn-primary" name="{{id}}">Remove</button>
          </div>
        </div>
    </container>
        {{/each}}
        </div>
    <script src="./js/favorite.js"></script>
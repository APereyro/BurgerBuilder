<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BurgerBuilder</title>
    <link
      href="https://cdn.jsdelivr.net/npm/daisyui@2.51.6/dist/full.css"
      rel="stylesheet"
      type="text/css"
    />
    <link rel="stylesheet" href="./css/style.css" />
  </head>
  <body>
    <div class="navbar top-0 bg-base-100">
      <div class="flex-1">
        <a href="/" class="btn btn-ghost normal-case text-xl">BurgerBuilder</a>
      </div>
      <div class="flex-2">
        <a href="/results" class="btn btn-ghost normal-case text-xl">View All</a>
      </div>
      {{#if user}}
        <div class="dropdown dropdown-end">
          <label tabindex="0" class="btn btn-ghost rounded-btn">Profile</label>
          <ul
            tabindex="0"
            class="menu dropdown-content p-2 shadow bg-base-100 rounded-box w-52 mt-4"
          >
            <li><a href="/ingredients">New Burger</a></li>
            <li><a href="/favorites">Favorites</a></li>
            <li><a href="/mine">My Burgers</a></li>
            <li><a id="signout-button" href="/signout">Sign out</a></li>
          </ul>
        </div>
      {{/if}}
      
    </div>
    <div class="flex flex-wrap">
      {{{body}}}

    </div>

    <footer
      class="footer footer-center p-4 bg-base-300 text-base-content"
      style="position: relative; bottom: 0; width: 100%;"
    >
      <div>
        <p>Copyright Â© 2023 - All right reserved by The Coding Mavericks</p>
      </div>
    </footer>
    <script src="./js/logout.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
  </body>
</html>
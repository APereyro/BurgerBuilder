
<div id="cardDiv" class="flex flex-wrap">
  {{#each burger}}
<container class="card w-80 ml-3 mt-3 bg-warning shadow-xl">
    <figure><img src="{{image}}" alt="burger" class="mt-2 rounded"/></figure>
    <div class="card-body">
      <h2 class="card-title text-secondary">{{name}}</h2>
      <p class="text-secondary">{{description}}</p>
      <p class="text-secondary">{{ingredients}}</p>
      <div class="card-actions justify-end">
      <button class="btn btn-primary update"  type="button" data-id={{id}}>Update Recipe</button>
      <button class="btn btn-primary"  type="button" name="{{id}}">Delete Recipe</button>
      </div>
    </div>
</container>
  {{/each}}
</div>
<script src="./js/mine.js"></script>